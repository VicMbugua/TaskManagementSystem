QWidget#full_name_widget QPushButton{
	border: none;
	padding-left: 5px;
    text-align: left;
}
QPushButton[groupName="top_buttons"]{
    background-color: rgb(25, 94, 255);
    border: none;
    height: 28px;
    width: 28px;
    border-radius: 2px;
}
QPushButton[groupName="common_buttons"], QPushButton[groupName="cancel_buttons"],
QPushButton[groupName="options"]{
    background-color: rgb(25, 94, 255);
    border: none;
    height: 25px;
    width: 75px;
    border-radius: 2px;
    color: white;
}
QPushButton[groupName="common_buttons"]:hover, QPushButton[groupName="project_buttons"]:hover, 
QPushButton[groupName="top_buttons"]:hover, QPushButton[groupName="options"]:hover,
QPushButton[groupName="change_buttons"]:hover{
    background-color: rgb(33, 159, 255);
    color: black;
}
QPushButton[groupName="common_buttons"]:focus{
    /* background-color: rgb(33, 159, 255); */
    border: 2px solid darkblue;
    outline: none;
}
QPushButton[groupName="cancel_buttons"]:hover{
    background-color: rgba(255, 0, 0, 0.719);
}
QPushButton[groupName="project_buttons"]{
    background-color: rgb(25, 94, 255);
    border: none;
    height: 25px;
    width: 100px;
    border-radius: 2px;
    color: white;
}
QPushButton[groupName="project_buttons"]:disabled{
    background-color: gray;
}
QPushButton[groupName="change_buttons"]{
    background-color: rgb(25, 94, 255);
    border: none;
    height: 25px;
    width: 100px;
    border-radius: 2px;
    color: white;
}
QComboBox{
    background-color: white;
    border: 1px solid black;
    border-radius: 2px;
    height: 20px;
    width: 75px;
}

