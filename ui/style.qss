QPushButton#menu_btn {
	min-width: 25;
}
QPushButton#menu_btn:focus {
	outline: none;
}
QPushButton[groupName=nav_icon_buttons],[groupName=nav_buttons]{
	background-color: lightblue;
	min-height: 25;
	border: none;
    border-radius: 2px;
}
QPushButton[groupName=nav_buttons]{
    padding-left: 2px;
    padding-right: 2px;
}
QPushButton[groupName=nav_icon_buttons]:hover, [groupName=nav_buttons]:hover{
	background-color: rgb(33, 159, 255);
}
QPushButton[groupName=nav_icon_buttons]:checked, [groupName=nav_buttons]:checked{
	outline: none;
	background-color: rgb(25, 94, 255);
    color: white;
}
QPushButton[groupName=nav_icon_buttons]:focus, [groupName=nav_buttons]:focus{
    outline: none;
}
QPushButton[groupName=nav_icon_buttons]{
    min-width: 25px;
}
QPushButton#exit_btn:hover, QPushButton#exit_btn_1:hover, QPushButton#exit_btn_2:hover{
    background-color: rgba(255, 0, 0, 0.719);
}
